<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FaceDemoActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="login"
                android:onClick="login"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取所有Face数据"
                android:onClick="getAllSubjects"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新人脸数据"
                android:onClick="updateSubjectPhoto"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传人脸数据"
                android:onClick="uploadSubjectPhoto"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取用户信息"
                android:onClick="getSubjectById"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除用户"
                android:onClick="deleteUser"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建用户"
                android:onClick="createSubject"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新用户"
                android:onClick="updateSubject"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>