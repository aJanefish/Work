<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsrTestActivity">

    <Button
        android:id="@+id/activity_asr_test_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:onClick="activity_asr_test_start"/>


    <Button
        android:id="@+id/activity_asr_test_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:onClick="activity_asr_test_stop"
        app:layout_constraintLeft_toRightOf="@id/activity_asr_test_start"/>


    <TextView
        android:id="@+id/activity_asr_test_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_asr_test_stop"/>


</android.support.constraint.ConstraintLayout>